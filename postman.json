  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          ""
        ],
        "type": "text/javascript"
      }
    },
    {
      "listen": "test",
      "script": {
        "exec": [
          "if (pm.response.code === 200) {\n    var jsonData = pm.response.json();\n    if (pm.request.url.path.includes(\"login\")) {\n        pm.environment.set(\"jwt_token\", jsonData.token);\n    }\n}"
        ],
        "type": "text/javascript"
      }
    }
  ]
